<%- include('./partials/header') %>

<h1>ID: <%= instance.id %></h1>
    
<p>Title: <a href=<%= instance.book.url %>><%= instance.book.title %></a></p>
<p>Imprint: <%= instance.imprint %></p>
<p>Status:
<% if (instance.status == 'Available') { %>
    <span class="text-success"><%= instance.status %></span>
<% } else if( instance.status == 'Maintenance') { %>
    <span class="text-danger"><%= instance.status %></span>
<% } else { %>
    <span class="text-warning"><%= instance.status %></span>
<% } %> 
</p>

<% if (instance.status != 'Available') { %>
    <span>Due back: <%= instance.due_back %></span>
<% } %>

<h2>Do you really want to delete this copy?</h2>
<form action="" method="post">
  <input
    type="hidden"
    name="instanceid"
    id="instanceid"
    value="<%= instance._id %>"
  />
  <button type="submit">Delete</button>
</form>
<%- include('./partials/footer') %>